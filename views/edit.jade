extends layout

block content
    .container(style="font-family: 'Courier New', Courier, monospace;")
        .badge.bg-danger.fs-2.h1 #{title}
        form(method='POST', action='/medicines/edit/'+article._id)
            #form-group
                label Name
                input.form-control(name='name', type='text', value=article.name)
            #form-group
                label Price
                input.form-control(name='price', type='text', value=article.price)
            #form-group
                label Details
                textarea.form-control(name='details').value=article.details

            input.btn.btn-primary.mt-3(type='submit', value='submit')
            


       